<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/finish_form">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="It's easy for you to meet new people."/>
            <ToggleButton
                android:id="@+id/e_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="You enjoy being the center of attention."/>
            <ToggleButton
                android:id="@+id/e_i2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="You avoid being alone."/>
            <ToggleButton
                android:id="@+id/e_i3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="You spend a lot of your free time exploring various random topics that pique your interest."/>
            <ToggleButton
                android:id="@+id/n_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="You like to do things as they were done in the past"/>

                <ToggleButton
                android:id="@+id/n_s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="You like books and movies that make you come up with your own interpretation of the ending."/>
                <ToggleButton
                android:id="@+id/n_s3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="You are more inclined to follow your head than your heart."/>
            <ToggleButton
                android:id="@+id/t_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="You think the world would be a better place if people relied more on rationality and less on their feelings."/>
            <ToggleButton
                android:id="@+id/t_f2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="You enjoy watching people argue."/>
            <ToggleButton
                android:id="@+id/t_f3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="You prefer to follow a schedule."/>
            <ToggleButton
                android:id="@+id/p_j"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="You usually stay calm, even under a lot of pressure."/>
            <ToggleButton
                android:id="@+id/p_j2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="You often make a backup plan for a backup plan."/>
            <ToggleButton
                android:id="@+id/p_j3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textOn="Yes"
                android:textOff="No"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/finish_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="Finish" />
</RelativeLayout>